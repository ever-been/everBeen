<?xml version="1.0"?>
<taskContextDescriptor xmlns="http://been.d3s.mff.cuni.cz/task-context-descriptor"
					   xmlns:td="http://been.d3s.mff.cuni.cz/task-descriptor"
					   name="sync-task-test">

	<properties>
		<property name="been.task.sync.count">2</property>
		<property name="been.task.sync.runs">300000</property>
	</properties>

	<task>
		<name>server</name>

		<descriptor>
			<fromTemplate>server</fromTemplate>
		</descriptor>
	</task>

	<task>
		<name>client-1</name>
		<descriptor>
			<fromTemplate>client</fromTemplate>
		</descriptor>
	</task>


	<task>
		<name>client-2</name>
		<descriptor>
			<fromTemplate>client</fromTemplate>
		</descriptor>
	</task>

	<task runAfterTask="server">
		<name>finalizer</name>
		<descriptor>
			<fromTemplate>finalizer</fromTemplate>
		</descriptor>
	</task>

	<templates>
		<template name="server">
			<td:taskDescriptor groupId="cz.cuni.mff.d3s.been" bpkId="task-sync-test" version="3.0.0"
							   exclusive="exclusive" type="task">
				<td:properties>
					<td:property name="been.task.sync.type">SERVER</td:property>
				</td:properties>

				<td:java>
					<td:javaOptions>
						<td:javaOption>-Xmx16m</td:javaOption>
						<td:javaOption>-Xms4m</td:javaOption>
					</td:javaOptions>
				</td:java>


			</td:taskDescriptor>
		</template>

		<template name="client">
			<td:taskDescriptor groupId="cz.cuni.mff.d3s.been" bpkId="task-sync-test" version="3.0.0" type="task">
				<td:properties>
					<td:property name="been.task.sync.type">CLIENT</td:property>
				</td:properties>

				<td:java>
					<td:javaOptions>
						<td:javaOption>-Xmx16m</td:javaOption>
						<td:javaOption>-Xms4m</td:javaOption>
					</td:javaOptions>
				</td:java>
			</td:taskDescriptor>
		</template>

		<template name="finalizer">
			<td:taskDescriptor groupId="cz.cuni.mff.d3s.been" bpkId="task-sync-test" version="3.0.0" type="task">
				<td:properties>
					<td:property name="been.task.sync.type">FINALIZER</td:property>
				</td:properties>

				<td:java>
					<td:javaOptions>
						<td:javaOption>-Xmx16m</td:javaOption>
						<td:javaOption>-Xms4m</td:javaOption>
					</td:javaOptions>
				</td:java>
			</td:taskDescriptor>
		</template>
	</templates>

</taskContextDescriptor>